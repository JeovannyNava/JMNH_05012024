@model JMNH_05012024.ViewModels.LoginViewModel
@{ Layout = null; }
<html lang="en" data-topbar-color="dark" data-bs-theme="light" data-layout-mode="default" data-layout-width="default" data-menu-color="light" data-menu-icon="default" data-sidenav-size="default">
<head>
    <meta charset="utf-8">
    <title>Log In | Ubold - Responsive Bootstrap 5 Admin Dashboard</title>
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">
    <script src="~/default/assets/js/head.js"></script>
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="app-style">
    <link href="~/default/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="app-style">
    <link href="~/default/assets/css/app.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css">
</head>

<body class="authentication-bg authentication-bg-pattern">
    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <div class="card bg-pattern">
                        <div class="card-body p-4">
                            <div class="text-center w-75 m-auto">

                                <p class="text-muted mb-4 mt-3">Escribe tu usuario y contraseña para acceder al sistema.</p>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <form method="post">
                                <div class="mb-3">
                                    <label asp-for="Email">Correo</label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="Ingresa tu usuario" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Password">Contraseña</label>
                                    <input asp-for="Password" class="form-control" placeholder="Ingresa tu contraseña" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="text-center d-grid">
                                    <button class="btn btn-primary" type="submit"> Ingresar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/default/assets/js/pages/authentication.init.js"></script>
</body>
</html>