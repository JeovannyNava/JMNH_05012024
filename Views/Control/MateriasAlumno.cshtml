@model JMNH_05012024.Models.Alumno
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h3>Alumno: @Model.Nombre @Model.ApellidoPaterno  @Model.ApellidoMaterno</h3>

            </div>
        </div>
    </div>
</div>
@if (Model.Materias.Count > 0)
{
    <div>
        <h4 class="text-center mb-5">TIRA DE MATERIAS</h4>

        <table id="materias" class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Costo
                    </th>
                </tr>

            </thead>
            <tbody>
                @foreach (var materia in Model.Materias)
                {
                    <tr>
                        <td>@materia.Nombre</td>
                        <td>$@(String.Format("{0:#,##0.00}", materia.Costo))</td>

                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Total</td>

                    <td>$@(String.Format("{0:#,##0.00}", Model.Materias.Sum(x => x.Costo)))</td>
                </tr>
            </tbody>
        </table>


    </div>
}
else
{
    <h1>Este alumno no tiene materias inscritas</h1>
}

