@{ 
    List<SelectListItem> materias = ViewBag.Materias;
}
<div class="modal" tabindex="-1" role="dialog" id="mdl-materias">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Opciones</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-md-12 col-lg-12 col-sm-12">
                    <label class="etiqueta">Genero</label>
                    @Html.DropDownList("IdMateria", materias, "-- Seleccione una materia --", htmlAttributes: new { @class = "form-control" })
                </div>

            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="inscribirMateria()">Agregar</button>
            </div>
        </div>
    </div>
</div>

<script>


    $(() => {

    });


    let inscribirMateria = () => {
        $.ajax({
            url: "/Materia/InscribirMateria",
            data: { IdMateria: $("#IdMateria").val() },
            success: function (msg) {

                if (msg.status == 200) {
                    swal({
                        title: "ÉXITO",
                        text: "Proceso terminado con éxito",
                        icon: "success",
                        button: "Aceptar",
                    }).then((value) => {
                        window.location.reload();
                    });
                } else {
                    swal({
                        title: "Error",
                        text: "Ocurrio un error, intentelo nuevamente",
                        icon: "warning",
                        button: "Aceptar",
                    });
                }
            },
            error: function (err) {
                console.log(err);
            }
        });
    }

</script>






